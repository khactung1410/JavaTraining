<?xml version="1.0" encoding="UTF-8"?>
    <web-app 
    	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    	xmlns="http://java.sun.com/xml/ns/javaee" 
    	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
      <display-name>Java Servlet clazz</display-name>
      <Servlet>
      	<servlet-name>hello-servlet</servlet-name>
      	<servlet-class>edu.java.web.HelloServlet</servlet-class>

      	<servlet-name>html-page</servlet-name>
      	<servlet-class>edu.java.web.HtmlPageServlet</servlet-class>
      <listener>
	  	<listener-class>edu.java.web.SimpleServletListener</listener-class>
      </listener>
<!--       	<servlet-name>displayHitCount</servlet-name>
      	<servlet-class>edu.java.web.HitCounterServlet</servlet-class> -->
      </Servlet>

      <servlet-mapping>    
        <servlet-name>hello-servlet</servlet-name>
        <url-pattern>/hello2</url-pattern>

        <servlet-name>html-page</servlet-name>
        <url-pattern>/page</url-pattern>

<!--         <servlet-name>displayHitCount</servlet-name>
        <url-pattern>/count</url-pattern>   -->       
      </servlet-mapping>



</web-app>
